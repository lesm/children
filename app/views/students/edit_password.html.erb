<br/><br/>
<div class="form-horizontal">
  <%= form_for([@teacher,@student]) do |f| %>
    <% if @student.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@student.errors.count, "error") %> El estudiante no se a podido guardar</h2>
        <ul>
          <% @student.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class='form-group'>
      <%= f.label :password, 'Contraseña', class: "control-label col-sm-2" %><br>
      <div class="col-sm-3">
        <%= f.password_field :password, class: "form-control"  %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, 'Confirmar Contraseña', class: "control-label col-sm-2" %><br />
      <div class="col-sm-3">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control"  %>
      </div>
    </div><br/>

    <div class='form-group'>
      <div class="col-sm-10 pull-right">
        <%= f.submit "Actualizar Contraseña", class: 'btn btn-success' %>
        <%= link_to "Regresar", user_student_path(@teacher, @student), class: 'btn btn-info' %>
      </div>
    </div>
  <% end %>
</div>
